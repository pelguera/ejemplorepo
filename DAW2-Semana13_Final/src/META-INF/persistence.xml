<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="JPA-Web" >
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        
        <class>edu.cibertec.daw2.entity.Boleta</class>
        <class>edu.cibertec.daw2.entity.Categoria</class>
        <class>edu.cibertec.daw2.entity.Cliente</class>
        <class>edu.cibertec.daw2.entity.Producto</class>
        <class>edu.cibertec.daw2.entity.ProductoHasBoleta</class>
        <class>edu.cibertec.daw2.entity.ProductoHasBoletaPK</class>
        
	    <properties>
		    <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		    <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/mydb"/>
		    <property name="eclipselink.jdbc.user" value="root"/>
		    <property name="eclipselink.jdbc.password" value="root"/>
		    <property name="eclipselink.logging.level" value="FINE"/>     
		</properties>        
        
    </persistence-unit>
    	        
</persistence>
